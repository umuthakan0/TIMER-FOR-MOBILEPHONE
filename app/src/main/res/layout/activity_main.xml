<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblminute"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="11dp"
        android:text="00"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="47dp"
        android:text=":"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnstart"
        app:layout_constraintEnd_toStartOf="@+id/lblsecond"
        app:layout_constraintStart_toEndOf="@+id/lblminute"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblsecond"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_marginEnd="10dp"
        android:text="00"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/lblsalise"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_marginEnd="31dp"
        android:text="00"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="46dp"
        android:text=":"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnstart"
        app:layout_constraintEnd_toStartOf="@+id/lblsalise"
        app:layout_constraintStart_toEndOf="@+id/lblsecond"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnstart"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="418dp"
        android:onClick="startorstop"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>